    "format-ethernet": "Û∞àÄ",
    "format-linked": "Û∞àÄ",
    "format-disconnected": "Û∞§≠",
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
    "tooltip-format-wifi": "<b>{essid}</b>\nSignal: {signalStrength}% ({signaldBm} dBm)\nIP: {ipaddr}/{cidr}\nGateway: {gwaddr}\nInterface: {ifname}",
    "tooltip-format-ethernet": "Ethernet: {ifname}\nIP: {ipaddr}/{cidr}\nGateway: {gwaddr}",
    "tooltip-format-linked": "Link active: {ifname}\nAwaiting IP assignment",
    "tooltip-format-disconnected": "No active network",
    "on-click": "ghostty -e nmtui"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  }
}
