        "format": "{icon} {percent}%",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-",
        "min-length": 6
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
